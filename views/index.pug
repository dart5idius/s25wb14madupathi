extends layout

block content
  h1= title
  p Welcome to our #{title} application. This is the second project.
  button(type="button", class="btn btn-primary", onclick="faster()") Sample Button

  div#faster add in extra

  script.
    let value = 1;
    let amt = 2;

    function faster() {
      amt *= 2;
      value += amt;
      document.getElementById('faster').textContent = `Faster ${value} times ${amt}`;
    }